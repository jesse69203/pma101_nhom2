<!-- shadow_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền -->
    <solid android:color="#AFEBF3" />

    <!-- Đổ bóng -->
    <corners android:radius="10dp" />
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />

    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
    <corners android:radius="10dp" />
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />

    <!-- Độ nổi -->
    <item android:top="10dp" android:right="10dp" android:bottom="10dp" android:left="10dp">
        <shape>
            <solid android:color="#40000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Thuộc tính đổ bóng -->
    <item android:bottom="1dp" android:left="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="#40000000"
                android:endColor="#00000000"
                android:startColor="#40000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>

</shape>
