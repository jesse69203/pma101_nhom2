<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

android:layout_marginRight="10dp"
    >


    <LinearLayout
        android:id="@+id/cardViewSanPham"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/khung2"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="0dp">




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/anh11"
                    android:layout_width="98dp"
                    android:layout_height="122dp"
                    android:src="@drawable/k40_gaming" />

                <TextView
                    android:id="@+id/tv_tenSP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:text="XXX" />

            </LinearLayout>








            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"

                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.9"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal">



                        <TextView
                            android:id="@+id/tv_mauSac"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="màu sắc"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giá:" />

                        <TextView
                            android:id="@+id/tv_giaSPham"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XXX" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trạng thái:" />

                        <TextView
                            android:id="@+id/tv_TrangthaiSP1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XXX" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_romSP"
                        android:layout_marginVertical="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rom" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/btnThemvaoGiohang"
                            android:layout_width="100dp"
                            android:layout_height="35dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="Add to Cart"
                            android:paddingHorizontal="4dp"
                            android:textColor="#8E0000"
                            android:background="@drawable/khung_btn2"
                            android:textSize="12sp"
                            android:drawableLeft="@drawable/cart"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/btnMuaNgay"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:background="@drawable/khung_btn"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text="Buy now" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>