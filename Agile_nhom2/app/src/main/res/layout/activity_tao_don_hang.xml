<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".TaoDonHang">
<Toolbar
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:title="Đơn hàng"
    android:id="@+id/toolbar"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@drawable/khung"
        app:cardBackgroundColor="#E4E4E4"
        android:id="@+id/cardViewInfor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Xuân Hải"
                android:textSize="25sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="-"/>
            <TextView
                android:id="@+id/numberPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="0972512987"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="35sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20sp"
                android:text="Hẻm 4/71/18 Đường Vân Canh, Hậu Ái, Vân Canh, Hoài Đức, Hà Nội"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130sp"
        android:layout_margin="10dp"
        android:id="@+id/cardViewProduct">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <ImageView
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:src="@drawable/k40_gaming"
               android:id="@+id/imagesProduct"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameProduct"
                    android:text="IPHONE 14 PROMAX"
                    android:textStyle="bold"
                    android:textColor="#020202"
                    android:textSize="24sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/colorProduct"
                        android:text="Đen"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ramProduct"
                        android:text=",128gb"
                        android:paddingLeft="5dp"
                        android:textSize="17sp"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceProduct"
                    android:text="20.000.000 VND"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:gravity="center_horizontal"
                    android:textColor="#C32323"/>

                <LinearLayout
                    android:layout_width="174dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btnPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="5dp"
                        android:background="@color/hongnhat"
                        android:padding="10dp"
                        android:src="@drawable/baseline_add_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:layout_marginHorizontal="5dp"
                        android:textSize="25sp" />

                    <ImageView
                        android:id="@+id/btnApart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/hongnhat"
                        android:padding="10dp"
                        android:layout_marginHorizontal="5dp"
                        android:src="@drawable/baseline_add_24" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_all_inbox_24"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Voucher"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"/>
                <Spinner
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:paddingHorizontal="10dp"
                    android:background="#D8D7D7"
                    android:id="@+id/spnVoucher"
                    android:layout_marginLeft="25dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/khung"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tóm tắt đơn hàng"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng phụ:"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000000 đ"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:id="@+id/priceProduct2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vận chuyển:"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000000 đ"
                android:layout_marginRight="0dp"
                android:textStyle="bold"
                android:id="@+id/priceShip"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher:"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000000 đ"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:id="@+id/priceVoucher"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng:"
                android:textSize="23sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000000 đ"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/priceTotal"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt hàng"
            android:id="@+id/btnDatHang"
            android:layout_margin="10dp"/>
    </LinearLayout>
    </LinearLayout>


</LinearLayout>